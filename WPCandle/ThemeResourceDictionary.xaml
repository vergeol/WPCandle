<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<SolidColorBrush x:Key="MainCandleColorBrush" Color="#FFDED4C3"/>
	<LinearGradientBrush x:Key="3DBrush" EndPoint="0.5,1" StartPoint="0.5,0">
		<LinearGradientBrush.RelativeTransform>
			<CompositeTransform CenterY="0.5" CenterX="0.5" Rotation="90"/>
		</LinearGradientBrush.RelativeTransform>
		<GradientStop Color="#FFFFF8D6" Offset="0.539"/>
		<GradientStop Color="#FFC7C4B8" Offset="0.996"/>
		<GradientStop Color="#FFC7C4B8"/>
	</LinearGradientBrush>
	<RadialGradientBrush x:Key="MecheBrush">
		<GradientStop Color="#FFC8C5B8" Offset="0"/>
		<GradientStop Color="#FFF6EFD1" Offset="1"/>
	</RadialGradientBrush>
	<Color x:Key="CandleSideColor">#FFB2A77D</Color>
	<Color x:Key="CandleHighlightColor">#FFFFF8D6</Color>
	<!-- Resource dictionary entries should be defined here. -->
</ResourceDictionary>